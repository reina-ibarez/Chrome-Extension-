{
    "manifest_version": 2,
    "name": "Unicorns",
    "description": "The extension that will define them all",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"]
    },
        "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["jquery-3.2.1.min.js", "content.js"],
            "css": ["styles.css"]
        }
    ],
      "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
   ]
}
